        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_PR32_2019"
        mc:Ignorable="d"
        Title="SwitchStatusWindow" Height="239" Width="407">
    <Grid>
        <Label Content="Switch status" FontSize="12" HorizontalAlignment="Left" Margin="33,65,0,0" VerticalAlignment="Top" Height="34" Width="84"/>
        <ComboBox x:Name="cmbStatus" Margin="144,65,121,111">
            <ComboBoxItem Content="Open"/>
            <ComboBoxItem Content="Closed"/>
